# Fail2Ban configuration file.

[DEFAULT]

# "ignoreip" can be an IP address, a CIDR mask or a DNS host
ignoreip = 127.0.0.1/8
bantime  = 600
maxretry = 4
mta = sendmail

destemail = developers@democracyclub.org.uk
sendername = "{{project_name}} ({{ deploy_env }}) Fail2BanAlerts"
action = %(action_mw)s

#
# JAILS
#

[ssh]

enabled  = yes
port     = ssh
filter   = sshd
logpath  = /var/log/auth.log


[ssh-ddos]

enabled  = yes
port     = ssh
filter   = sshd-ddos
logpath  = /var/log/auth.log


[nginx-http-auth]
enabled = true
